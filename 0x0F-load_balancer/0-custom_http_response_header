#!/usr/bin/env bash
# Ignore SC2154 for shellcheck as requested
# shellcheck disable=SC2154

set -e

# Install nginx silently
apt-get update -y
apt-get install nginx -y

# Get the hostname of the server
server_hostname=$(hostname)

# Nginx config snippet to add custom header
CONF_FILE="/etc/nginx/conf.d/custom_header.conf"

cat > "$CONF_FILE" << EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm;

    add_header X-Served-By "$server_hostname";

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF

# Remove default nginx site config to avoid conflict
rm -f /etc/nginx/sites-enabled/default /etc/nginx/sites-available/default

# Restart nginx using service command (not systemctl)
service nginx restart
