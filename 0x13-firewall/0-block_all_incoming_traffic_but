#!/usr/bin/env bash
# Enable UFW firewall with only SSH, HTTP, and HTTPS allowed

# Reset any existing rules to start fresh (optional but recommended)
ufw --force reset

# Deny all incoming connections by default
ufw default deny incoming

# Allow all outgoing connections by default
ufw default allow outgoing

# Allow SSH (port 22)
ufw allow 22/tcp

# Allow HTTP (port 80)
ufw allow 80/tcp

# Allow HTTPS (port 443)
ufw allow 443/tcp

# Enable UFW without prompt
ufw --force enable
